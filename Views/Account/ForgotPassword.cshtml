@model webtintuc.Account.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_LoginLayout.cshtml";

}

<div class="row justify-content-center" style="padding-top: 100px;">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Bạn quên mật khẩu?</h1>
                                <p class="mb-4">Bạn cần cung cấp địa chỉ Email đã đăng ký với chúng tôi để đặt lại mật
                                    khẩu
                                </p>
                            </div>
                            <form class="user" asp-action="ForgotPassword" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-user"
                                        placeholder="Nhập địa chỉ Email..." />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <input type="submit" value="Đặt lại mật khẩu"
                                    class="btn btn-primary btn-user btn-block" />
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="Register">Tạo tài khoản mới</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-action="Login">Thử đăng nhập lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}