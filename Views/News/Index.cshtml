    @model IEnumerable<webtintuc.Models.NewsModel>

@{
    ViewData["Title"] = "Quản lý bài viết";
    int i=0;
}

<h1>Danh sách bài viết</h1>

<p>
    <a asp-action="Create"class="btn btn-primary " >Thêm bài viết mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryModel)
            </th>
            <th>
                Tùy chọn
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(++i)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.NewsID">@Html.DisplayFor(modelItem => item.Title)</a>
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryModel.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorModel.AuthorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NewsID">Chỉnh sửa</a> |
                @* <a asp-action="Details" asp-route-id="@item.NewsID">Xem</a> | *@
                <a asp-action="Delete" asp-route-id="@item.NewsID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>